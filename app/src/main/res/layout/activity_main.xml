<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn1"
            style="@style/butt"
            android:onClick="clickbtn1"
            />
        <Button
            android:id="@+id/btn2"
            style="@style/butt"
            android:onClick="clickbtn2"
            />
        <Button
            android:id="@+id/btn3"
            style="@style/butt"
            android:onClick="clickbtn3"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/l1"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn4"
            style="@style/butt"
            android:onClick="clickbtn4"
            />
        <Button
            android:id="@+id/btn5"
            style="@style/butt"
            android:onClick="clickbtn5"
            />
        <Button
            android:id="@+id/btn6"
            style="@style/butt"
            android:onClick="clickbtn6"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/l2"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn7"
            style="@style/butt"
            android:onClick="clickbtn7"
            />
        <Button
            android:id="@+id/btn8"
            style="@style/butt"
            android:onClick="clickbtn8"
            />
        <Button
            android:id="@+id/btn9"
            style="@style/butt"
            android:onClick="clickbtn9"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/l3"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnX"
            style="@style/butt"
            android:text="X"
            android:onClick="VX"
            />
        <Button
            android:id="@+id/btnO"
            style="@style/butt"
            android:text="O"
            android:onClick="VO"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnrestart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/restart"
        android:onClick="Restart"
        app:layout_constraintBottom_toTopOf="@id/l1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>